     if(sqlca.sqlcode==100)
          {
           //print_sqlca();
           break;
          }
      
     int j=0;
     for( j=0; j<sqlca.sqlerrd[2]; j++)
     {
       EXEC SQL UPDATE organ SET organname='易联达' where organcode=:caCode[j];
       //EXEC SQL COMMIT;
